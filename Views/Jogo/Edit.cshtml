@model UTAD.LAB._2022.TheGammingHour.Models.JogoInfo

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<div class="box-container-input row">
    <div class="container-input-topics col-md-4">
        <form asp-action="Edit">
            <div class="form-group" enctype="multipart/form-data">
                <label asp-for="Jogo.Nome" class="label-input control-label"></label>
                <input asp-for="Jogo.Nome" class="form-control" />
                <span asp-validation-for="Jogo.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Jogo.Data" class="label-input control-label"></label>
                <input asp-for="Jogo.Data" class="form-control" />
                <span asp-validation-for="Jogo.Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Jogo.Preco" class="label-input control-label"></label>
                <input asp-for="Jogo.Preco" class="form-control" />
                <span asp-validation-for="Jogo.Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Jogo.Pegi" class="label-input control-label"></label>
                <input asp-for="Jogo.Pegi" class="form-control" />
                <span asp-validation-for="Jogo.Pegi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Jogo.Descricao" class="label-input control-label"></label>
                <input asp-for="Jogo.Descricao" class="form-control" />
                <span asp-validation-for="Jogo.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Jogo.Desconto" /> @Html.DisplayNameFor(model => model.Jogo.Desconto)
                </label>
            </div>
            <div class="label-input form-group">
                <label asp-for="Jogo.PercentagemDesconto" class="control-label"></label>
                <input asp-for="Jogo.PercentagemDesconto" class="form-control" />
                <span asp-validation-for="Jogo.PercentagemDesconto" class="text-danger"></span>
            </div>
            <div class="label-input form-group">
                <label asp-for="Jogo.Avaliacao" class="control-label"></label>
                <input asp-for="Jogo.Avaliacao" class="form-control" />
                <span asp-validation-for="Jogo.Avaliacao" class="text-danger"></span>
            </div>

            <div class="label-input form-group">
                <select asp-for="Categoria.Id" asp-items="@ViewBag.Categoria">
                </select>
            </div>
            <div class="label-input form-group">
                <select asp-for="Plataforma.Id" asp-items="@ViewBag.Plataforma">
                </select>
            </div>
            <div class="label-input form-group">
                <select asp-for="Produtora.Id" asp-items="@ViewBag.Produtora">
                </select>
            </div>
            <div class="container-input form-group">
                <input type="submit" value="Create" class="btn-input-topics btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
