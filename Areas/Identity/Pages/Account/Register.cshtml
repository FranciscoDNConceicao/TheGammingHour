@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>The Gamming Hour</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Cabecalho.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/The_Gaming_Hour_UTAD_2022.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/FontAwesome/all.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,200,1,0" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,200,1,0" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link rel="shortcut icon" href="~/Imagens/logo-icon.ico" type="image/x-icon" />
</head>
<body>
    <div class="form-container">
        <div class="container-register">
            <a href="index.html" class="nav-logo-title-container"><img class="nav-logo-title" src="~/Imagens/TheGammingHourTitleLogo.png" /></a>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="login-item text-box-email form-floating">
                    <div class="icon-login">
                        <span class="material-symbols-outlined">badge</span>
                    </div>
                    <input asp-for="Input.Nome" class="form-control" autocomplete="name" aria-required="true" />
                    <label asp-for="Input.Nome" id="label-text-input" class="form-label"></label>
                    <span asp-validation-for="Input.Nome" class="text-danger"></span>
                </div>
                <div class="login-item text-box-email form-floating">
                    <div class="icon-login">
                        <span class="material-symbols-outlined">account_circle</span>
                    </div>
                    <input asp-for="Input.Username" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Username" id="label-text-input" class="form-label"></label>
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="login-item text-box-email form-floating">
                    <div class="icon-login">
                        <span class="material-symbols-outlined">phone_iphone</span>
                    </div>
                    <input asp-for="Input.Telefone" class="form-control" autocomplete="number" aria-required="true" />
                    <label asp-for="Input.Telefone" id="label-text-input" class="form-label"></label>
                    <span asp-validation-for="Input.Telefone" class="text-danger"></span>
                </div>
                <div class="login-item text-box-email form-floating">
                    <div class="icon-login">
                        <span class="material-symbols-outlined">mail</span>
                    </div>
                    <input asp-for="Input.Email" class="form-control" autocomplete="number" aria-required="true" />
                    <label asp-for="Input.Email" id="label-text-input" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="login-item text-box-email form-floating">
                    <div class="icon-login">
                        <span class="material-symbols-outlined">key</span>
                    </div>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" id="label-text-input" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="login-item text-box-email form-floating">
                    <div class="icon-login">
                        <span class="material-symbols-outlined">key</span>
                    </div>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.ConfirmPassword" id="label-text-input" class="form-label"></label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="login-item">
                    <div class="checkbox">
                        <label asp-for="Input.Newsletter" class="form-label">
                            <input class="form-check-input" asp-for="Input.Newsletter" />
                            @Html.DisplayNameFor(m => m.Input.Newsletter)
                        </label>
                    </div>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            </form>
        </div>

    </div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
